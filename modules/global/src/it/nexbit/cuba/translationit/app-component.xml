<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-component xmlns="http://schemas.haulmont.com/cuba/app-component.xsd"
               dependsOn="com.haulmont.cuba">
    <module blocks="*"
            name="global">
        <artifact appJar="true"
                  name="translationit-global"/>
        <property name="cuba.persistenceConfig"
                  value="+it/nexbit/cuba/translationit/persistence.xml"/>
        <property name="cuba.metadataConfig"
                  value="+it/nexbit/cuba/translationit/metadata.xml"/>
        <property name="cuba.viewsConfig"
                  value="+it/nexbit/cuba/translationit/views.xml"/>
    </module>
    <module blocks="core"
            dependsOn="global"
            name="core">
        <artifact appJar="true"
                  name="translationit-core"/>
        <property name="cuba.springContextConfig"
                  value="+it/nexbit/cuba/translationit/spring.xml"/>
        <property name="cuba.mainMessagePack"
                  value="+it.nexbit.cuba.translationit.core"/>
    </module>
    <module blocks="web,desktop"
            dependsOn="global"
            name="gui">
        <artifact appJar="true"
                  name="translationit-gui"/>
    </module>
    <module blocks="web"
            dependsOn="gui"
            name="web">
        <artifact appJar="true"
                  name="translationit-web"/>
        <artifact classifier="web"
                  configuration="webcontent"
                  ext="zip"
                  name="translationit-web"/>
        <property name="cuba.springContextConfig"
                  value="+it/nexbit/cuba/translationit/web-spring.xml"/>
        <property name="cuba.dispatcherSpringContextConfig"
                  value="+it/nexbit/cuba/translationit/web-dispatcher-spring.xml"/>
        <property name="cuba.windowConfig"
                  value="+it/nexbit/cuba/translationit/web-screens.xml"/>
        <property name="cuba.menuConfig"
                  value="+it/nexbit/cuba/translationit/web-menu.xml"/>
        <property name="cuba.permissionConfig"
                  value="+it/nexbit/cuba/translationit/web-permissions.xml"/>
        <property name="cuba.mainMessagePack"
                  value="+it.nexbit.cuba.translationit.web"/>
    </module>
    <module blocks="desktop"
            dependsOn="gui"
            name="desktop">
        <artifact name="translationit-desktop"/>
        <property name="cuba.springContextConfig"
                  value="+it/nexbit/cuba/translationit/desktop-spring.xml"/>
        <property name="cuba.windowConfig"
                  value="+it/nexbit/cuba/translationit/desktop-screens.xml"/>
        <property name="cuba.menuConfig"
                  value="+it/nexbit/cuba/translationit/desktop-menu.xml"/>
        <property name="cuba.permissionConfig"
                  value="+it/nexbit/cuba/translationit/desktop-permissions.xml"/>
        <property name="cuba.mainMessagePack"
                  value="+it.nexbit.cuba.translationit.desktop"/>
    </module>
</app-component>
